<?xml version="1.0" encoding="utf-8"?>

<!--  tab_create_event_map.xml

UI for the details page when creating an event

-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tab_create_event_details"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <!-- Event Name -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/rl_create_event_name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_create_event_name"
                android:textSize="30dp"
                android:hint="Event Name"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/blueBar1"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/rl_create_event_name"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_blue_light">
        </LinearLayout>

        <!-- Date Time -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_create_event_date"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="From:"
                android:id="@+id/tv_create_event_date_from"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/et_create_event_date_from"
                android:layout_below="@+id/tv_create_event_date_from"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/et_create_event_time_from"
                android:layout_below="@+id/tv_create_event_date_from"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/et_create_event_date_from"
                android:layout_toEndOf="@+id/et_create_event_date_from"
                android:focusableInTouchMode="false"
                android:focusable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="To:"
                android:id="@+id/tv_create_event_date_to"
                android:layout_below="@+id/et_create_event_date_from"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/et_create_event_date_to"
                android:layout_below="@+id/tv_create_event_date_to"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:focusableInTouchMode="false"
                android:focusable="false"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/et_create_event_time_to"
                android:layout_alignTop="@+id/et_create_event_date_to"
                android:layout_toRightOf="@+id/et_create_event_date_to"
                android:layout_toEndOf="@+id/et_create_event_date_to"
                android:focusableInTouchMode="false"
                android:focusable="false"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/blueBar2"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/rl_create_event_date"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_blue_light">
        </LinearLayout>

        <!-- Event Details -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/rl_create_event_details"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="1.93">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Details:"
                android:textStyle="bold"
                android:id="@+id/tv_create_event_details"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/et_create_event_details"
                android:hint="Event Details"
                android:maxLines="5"
                android:gravity="top"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:paddingBottom="5dp"
                android:layout_below="@+id/tv_create_event_details"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/blueBar3"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/rl_create_event_details"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_blue_light">
        </LinearLayout>

        <!-- Event Location -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_create_event_location"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Location:"
                android:textStyle="bold"
                android:id="@+id/tv_create_event_location"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/et_create_event_location"
                android:hint="Event Location"
                android:gravity="top"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:layout_below="@+id/tv_create_event_location"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/ib_create_event_location"
                android:layout_toStartOf="@+id/ib_create_event_location" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ib_create_event_location"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        </LinearLayout>
</ScrollView>

