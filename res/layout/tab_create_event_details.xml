<?xml version="1.0" encoding="utf-8"?>

<!--  tab_create_event_map.xml

UI for the details page when creating an event

-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--  Event Name Label and Display-->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Event Name:"
            android:id="@+id/tvEventName"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etEventName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tvEventName"
            android:layout_toRightOf="@+id/tvEventName"
            android:layout_toEndOf="@+id/tvEventName"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/blueBar1"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/tvEventName"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/holo_blue_light">
        </LinearLayout>
        <!--  Start Time Label, Button, and Display-->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start Time:"
            android:id="@+id/tvStartTime"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tvEventName"
            android:layout_alignLeft="@+id/tvEventName"
            android:layout_alignStart="@+id/tvEventName"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SelectedStartTime"
            android:id="@+id/tvSelectedStartTime"
            android:layout_alignBottom="@+id/buttonStartTime"
            android:layout_toRightOf="@+id/buttonStartTime"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonStartTime"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvStartTime"
            android:layout_alignBottom="@+id/tvStartTime"/>

    <!--  End Time Label, Button, and Display-->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="End Time:"
            android:id="@+id/tvEndTime"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tvStartTime"
            android:layout_alignLeft="@+id/tvStartTime"
            android:layout_alignStart="@+id/tvStartTime"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEndTime"
            android:layout_alignBottom="@+id/tvEndTime"
            android:layout_alignLeft="@+id/buttonStartTime"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SelectedEndTime"
            android:id="@+id/tvSelectedEndTime"
            android:layout_alignBottom="@+id/buttonEndTime"
            android:layout_toRightOf="@+id/buttonStartTime"/>

        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/blueBar2"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/tvEndTime"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/holo_blue_light">
        </LinearLayout>
        <!--  Location Label and Display-->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location:"
            android:id="@+id/tvLocation"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tvEndTime"
            android:layout_alignLeft="@+id/tvEndTime"
            android:layout_alignStart="@+id/tvEndTime"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="15"
            android:id="@+id/mtLocation"
            android:layout_below="@+id/tvLocation"
            android:layout_alignLeft="@+id/tvLocation"
            android:layout_alignStart="@+id/tvLocation"/>

        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/blueBar3"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/mtLocation"
                android:layout_marginTop="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/holo_blue_light">
        </LinearLayout>
        <!--  Invited Label-->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Invited:"
            android:id="@+id/tvInvited"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/mtLocation"
            android:layout_alignLeft="@+id/mtLocation"
            android:layout_alignStart="@+id/mtLocation"/>
        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/blueBar4"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/tvInvited"
                android:layout_marginTop="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/holo_blue_light">
        </LinearLayout>
    <!--  Description Label and Display-->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description:"
            android:id="@+id/tvDescription"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/tvInvited"
            android:layout_alignLeft="@+id/tvInvited"
            android:layout_alignStart="@+id/tvInvited"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/mtDescription"
            android:layout_below="@+id/tvDescription"
            android:layout_alignLeft="@+id/tvDescription"
            android:layout_alignStart="@+id/tvDescription"/>

        <!--  Create button-->
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:id="@+id/buttonCreate"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"/>
</RelativeLayout>

