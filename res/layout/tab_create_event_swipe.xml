<?xml version="1.0" encoding="utf-8"?>

<!--  tab_create_event_swipe.xml

UI for the Favorite/Recent events list when creating an event

-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rlCreateEvent"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Create New Event"
            android:id="@+id/tv_create_event_title"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:textColor="@android:color/secondary_text_dark" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_create_event_back_button"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="11dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_arrow_selector"
            />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/pCreateEventDetailInvite"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        android:layout_below="@id/rlCreateEvent">

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/ptsCreateEventDetailInvite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#33b5e5"
            android:textColor="#fff"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
    </android.support.v4.view.ViewPager>

</RelativeLayout>